from apscheduler.scheduler import Scheduler
import os, logging, time
import upload_to_drive, playerStats, convert_to_excel, goalieStats, shootingStats


logging.basicConfig()
sched = Scheduler()

@sched.interval_schedule(minutes = 2)
def timed_job():
   execfile("./goalieStats.py")
   time.sleep(40)
   execfile("./shootingStats.py")
   time.sleep(20)
   execfile("./playerStats.py")
   time.sleep(20)
   execfile("./upload_to_drive.py")

#@sched.cron_schedule(day_of_week='mon-fri', hour=17)
#def scheduled_job():
#    print 'This job is run every weekday at 5pm.'

sched.start()

while True:
    pass